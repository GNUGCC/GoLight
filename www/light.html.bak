        <script>
            var width = main.offsetWidth;
            var images = ["20220111/JUQwBK", "20220111/RI402S", "20220111/KfLcjJ", "20220111/11TG7E", "20220111/dlHb5S"];
            var names = ["何達煌", "林秀琴", "鄭新民", "洪稚彥", "黃友泉","方略電子" , "林榮霏", "周居正", "戴榮松", "洪鴻然", "李進興", "洪茂睿", "陳炳村", "林永宏", "邱聰德", "林錦豐", "葉國榮", "李宗祐", "張世立", "郭正欽", "盧明森", "黃烟樹","何達煌", "林秀琴", "鄭新民", "洪稚彥", "黃友泉", "林榮霏", "周居正", "戴榮松", "洪鴻然", "李進興", "洪茂睿", "陳炳村", "林永宏", "邱聰德", "林錦豐", "葉國榮", "李宗祐", "張世立", "郭正欽", "盧明森", "黃烟樹"];
            var count = 0;

            function marquee() {
                if (width - lights.scrollLeft > 1) {
                    lights.scrollLeft++;
                } else {
                    lights.scrollLeft = 0;
                }
            }

            function load() {
                $.getJSON("light").done(function (data) {
                    var list = [];

                    names.forEach(function (name) {
                        var index = Math.floor(Math.random() * images.length);

                        list.push({name, image: images[index]});
                    });

                    data.records.forEach(function (record, index) {
                        list[index].name = record.name;
                        if(record.pet_image) {
                            list[index].image = record.pet_image;
                        } else {
                            list[index].image = record.image;
                        }
                    });

                    for (var i = list.length - 1; i > 0; i--) {
                        var j = Math.floor(Math.random() * (i + 1));
                        [list[i], list[j]] = [list[j], list[i]];
                    }

                    setTimeout(load, 5 * 60 * 1000);

                    count++;

                    replace(list);
                });
            }

            function replace(list) {
                var length = list.length;

                if (length) {
                    var item = list.pop();
                    var container = $(`div[data-grid="${length}"]`);

                    container.find("img").attr("src", "files/" + item.image);
                    container.find("div").text(item.name);

                    setTimeout(function () {
                        replace(list);
                    }, count > 1 ? 1000 : 0);
                }
            }

            setInterval(marquee, 100);

            load();
        </script>
